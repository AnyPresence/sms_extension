= simple_form_for(@message, :url => send_sms_path, :html => {class: 'form-horizontal'}) do |f|
  .form-inputs
    = f.error :base
    = f.error_notification
    = f.input :from
    = f.input :to
    = f.input :body, as: :text, input_html: {rows: 5}

  .form-actions
    = f.button :submit, "Send SMS", {class: 'btn btn-primary'}
    = link_to 'Cancel', settings_path, class: 'btn btn-link'
