%h3
  = link_to "Go back to settings", settings_path
%h4
  = flash[:notice]
  = flash[:alert]
  
%br
- if params[:type] == "MenuOption"
  %i Current text menu options:
  %br
  - current_account.text_message_options.each do |k,v|
    %i
      = k
      \- #{v[0]}
%br
- @menu_options.each do |option|
  %h3
    = link_to "#{option.name} - #{option.format}", [current_account, option]
  %br
  %br
%br

%h3
  = link_to "Add new menu option", :action => "new", :controller => "menu_options", :type => params[:type]